{
  "name": "AMTL VRAM Monitor (every 15 min)",
  "active": true,
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [{
            "field": "minutes",
            "minutesInterval": 15
          }]
        }
      },
      "name": "Every 15 Minutes",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.2,
      "position": [0, 0]
    },
    {
      "parameters": {
        "command": "nvidia-smi --query-gpu=timestamp,gpu_name,memory.used,memory.total,utilization.gpu --format=csv,noheader 2>/dev/null || echo 'nvidia-smi not available in container'"
      },
      "name": "Check VRAM",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [220, 0]
    }
  ],
  "connections": {
    "Every 15 Minutes": {
      "main": [[ { "node": "Check VRAM", "type": "main", "index": 0 } ]]
    }
  },
  "settings": { "executionOrder": "v1" }
}
